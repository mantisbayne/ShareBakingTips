<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/no_connection_error_image"
        android:src="@drawable/ic_baseline_error_outline"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/large_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/no_connection_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/large_margin"
        android:text="@string/no_network_connection_detected"
        android:visibility="gone"/>

    <FrameLayout
        android:id="@+id/recipe_list_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>